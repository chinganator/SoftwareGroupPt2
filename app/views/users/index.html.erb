<h1 align="center">All Users </h1>
<div align="center">
<%= search_form_for @q do |f| %>
    <div class="field">
        <%= f.label :email_cont, "Username contains" %>
        <br>
        <%= f.text_field :email_cont %>
        <br>
        <%= f.label :town_cont, "Town contains" %>
        <br>
        <%= f.text_field :town_cont %>
        <br>
        <%= f.submit "Search" %>
<% end %>

<% @users.each do |user| %>
    <ul class ="listing">
    <div class="row">
    <div class="well col-md-4 col-md-offset-4">
    <li> <%= image_tag user.avatar.url(:medium) %> </li>
    <li class="user-username"><%= link_to user.email, user_path(user) %> </li>
        <li><small><%= pluralize(user.books.count, "Books") if user.books %> </small></li>
        </div>
    </div>
</ul>
<% end %>
</div>