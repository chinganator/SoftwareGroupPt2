<h1> Edit a book </h1>

<%= form_for @book do |f| %>
    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :author %> 
        <%= f.text_field :author %>
    </p>
    <p>
        <%= f.label :genre %>
        <%= f.text_field :genre %>
    </p>
    <p>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </p>
        <%= f.submit %>
    </p>
