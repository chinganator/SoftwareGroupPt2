<h2 align="center">Title: <%= @book.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
 <h4 class="center"><strong>Description:</strong></h4>
 <hr>
 <%= simple_format(@book.description) %>
 <h4 class="center"><strong>Author:</strong></h4>
 <hr>
 <%= simple_format(@book.author) %>
 <h4 class="center"><strong>Genre:</strong></h4>
 <hr>
 <%= simple_format(@book.genre) %>
 <br></br>
<%= link_to "Edit", edit_book_path(@book), class: "btn btn-xs btn-primary" %> 
<%= link_to 'Back', books_path, class: "btn btn-xs btn-success" %>
<%= link_to "Delete", book_path(@book), method: :delete, data: 
{ confirm: "Are you sure you want to delete this article?"}, 
class: "btn btn-xs btn-danger" %>