<h2 align="center"><%= @book.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
<% if @book.user %>
<ul class="listing">
    <div class="row" align="center">
        <div class="col-md-4 col-md-offset-4">
        <li> <%= image_tag @book.user.avatar.url(:thumb) %> </li>
        <li class="book-title"><%= link_to @book.user.email, user_path(@book.user) %></li>
        <li><%= @book.user.email %> is located in <%= @book.user.town %>
        <li> Their library is located at <%= @book.user.address %> </li>

        </div>
        </div>
        </ul>
        <% end %>

 <h4 class="center"><strong>Description:</strong></h4>
 <%= simple_format(@book.description) %>
 <h4 class="center"><strong>Author:</strong></h4>
 <%= simple_format(@book.author) %>
 <h4 class="center"><strong>Genre:</strong></h4>
 <%= simple_format(@book.genre) %>
 <br></br>
 <%= link_to 'Back', books_path, class: "btn btn-xs btn-success" %>
<%= link_to "Checkout", book_path(@book), method: :delete, data: 
{ confirm: "Are you sure you want to checkout this book?"}, 
class: "btn btn-xs btn-danger" %>
<% if current_user == @book.user %>

<%= link_to "Edit", edit_book_path(@book), class: "btn btn-xs btn-primary" %> 

<% end %>